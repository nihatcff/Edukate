@model CourseCreateVM

<div class="container">
	<div class="row">

		<form method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly"></div>
			<div><h2>Create New Course</h2></div>
			<div class="form-group">
				<label asp-for="Title">Title</label>
				<input asp-for="Title" class="form-control" placeholder="add Title">
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Rating">Rating</label>
				<input asp-for="Rating" class="form-control" placeholder="add Rating">
				<span asp-validation-for="Rating" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Image">Image</label>
				<input asp-for="Image" class="form-control">
				<span asp-validation-for="Image" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-primary">Create</button>
			<a asp-action="Index" class="btn btn-danger">Cancel</a>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}