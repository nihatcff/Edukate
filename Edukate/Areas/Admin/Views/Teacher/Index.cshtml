@model List<TeacherGetVM>

<div class="container">
	<div class="row">

		<div><h2>Teachers Table</h2></div>
		<a class="btn btn-success" asp-action="Create">Add a new Teacher</a>
		<table class="table table-dark">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Fullname</th>
					<th scope="col">Course</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var teacher in Model)
				{
					<tr>
						<th scope="row">@teacher.Id</th>
						<td>@teacher.Fullname</td>
						<td>@teacher.CourseName</td>
						<td>
							<a asp-action="Update" asp-route-id="@teacher.Id" class="btn btn-warning">Update</a>
							<a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>


	</div>
</div>